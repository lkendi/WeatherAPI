@model WeatherVM

<h2>Weather in @Model.CityName, @Model.Country</h2>

<div>
    <h3>Current Weather</h3>
    <p>Temperature: @Model.Temperature°C</p>
    <p>Weather: @Model.MainWeather - @Model.WeatherDescription</p>
    <img src="@Model.Icon" alt="Weather Icon" />
    <p>Wind Speed: @Model.WindSpeed km/h</p>
    <p>Humidity: @Model.Humidity%</p>
    <p>Pressure: @Model.Pressure hPa</p>
</div>

<div>
    <h3>Forecast</h3>
    <ul>
        @foreach (var forecast in Model.Forecasts)
        {
            <li>
                <p>Date: @forecast.ForecastDateTime</p>
                <p>Temperature: @forecast.ForecastTemperature°C</p>
                <p>Weather: @forecast.ForecastMainWeather - @forecast.ForecastDescription</p>
                <img src="@forecast.ForecastIcon" alt="Weather Icon" />
            </li>
        }
    </ul>
</div>
